<p><?php

    $salario = 23000;

    function reajuste(){

        if($GLOBALS['salario'] >= 22000)
        $GLOBALS['salario'] *= 1.15;

        else
            $GLOBALS['salario'] *= 1.35;
   }
   echo "Salario atual: R$ $salario <br>";
   reajuste();
   echo "Salario com reajuste: R$ $salario";

?></p>
