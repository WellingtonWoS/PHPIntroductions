$saldo = 1000;
$debito = 100;
$credito = 150;

$debito = -$debito;
echo "<pre>";
echo "Saldo Anterior: ";
echo $saldo;
echo "<pre>";

echo "+ créditos ";
echo $credito;
echo "<pre>";
echo "- Crédito ";
echo "<pre>";
echo -$debito;

$saldo = $saldo + $debito + $credito;
echo "<pre>";

echo "Novo Saldo ";
echo $saldo;


