    echo "Exemplos de Controle de Fluxo - Do... While<br>";

    while($expressao <11){
        echo "$expressao<br>";
        $expressao++;
    }
    echo "<br>";
    echo "Exemplo de loop com comando do... while<br>";
    $expressao = 11;
    do{
        echo "$expressao<br>";
        $expressao++;
    }while($expressao <11);

