        <div id="main">
<p><?php

    $mes = 2;
    $ano = 2010;

    switch($mes){

        case 1:
            $dia = 31;
            echo "O mês $mes do ano $ano tem $dia dias";
            break;

        case 2:
            if(($ano % 4) == 0){

            $dia = 29;
            echo " O mês $mes do ano $ano tem $dia dias";
            break;

            }
    else {

        $dia = 28;
        echo " O mês $mes do ano $ano tem $dia dias, é um ano bissexto.";
        break;

    }
    case 3: 
        $dia = 31;
        echo " O mês $mes do ano $ano tem $dia dias";
        break;
    case 4:
        $dia = 30;
        echo " O mês $mes do ano $ano tem $dia dias";
        break;
    }
?></p>
